{
  "name": "zero-md",
  "version": "2.0.0-rc.3",
  "description": "Ridiculously simple zero-config markdown displayer",
  "author": "Jason Lee <jason@zerodevx.com>",
  "main": "src/index.js",
  "type": "module",
  "module": "src/index.js",
  "scripts": {
    "test": "rollup -c -w",
    "lint": "standard --verbose --plugin html '**/*.html' '**/*.js' | snazzy",
    "build": "rollup -c",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "chai": "^4.2.0",
    "eslint-plugin-html": "^6.1.0",
    "mocha": "^8.1.3",
    "rollup": "^2.31.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4"
  },
  "standard": {
    "ignore": [
      "test/build/",
      "dist/",
      "docs/v1/"
    ],
    "globals": [
      "HTMLElement",
      "customElements",
      "CustomEvent",
      "fetch",
      "location",
      "requestAnimationFrame",
      "chai"
    ]
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zerodevx/zero-md.git"
  },
  "bugs": {
    "url": "https://github.com/zerodevx/zero-md/issues"
  },
  "homepage": "https://zerodevx.github.io/zero-md/",
  "keywords": [
    "webcomponents",
    "customelements",
    "markdown-to-html",
    "marked",
    "prism"
  ],
  "dependencies": {
    "tailwindcss": "^1.9.2"
  }
}
